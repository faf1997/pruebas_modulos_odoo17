<odoo>

    <record model="ir.ui.view" id="credit_card_coupon_form">
        <field name="name">credit_card_coupon_form</field>
        <field name="model">credit.card.coupon</field>
        <field name="inherit_id" ref="l10n_credit_card_coupon.credit_card_coupon_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="credit_card_coupon_reconcile_id"/>
            </field>
            <field name="state" position="attributes">
                <attribute name="statusbar_visible">draft,closed,settled</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="credit_card_coupon_tree">
        <field name="name">credit_card_coupon_tree</field>
        <field name="model">credit.card.coupon</field>
        <field name="inherit_id" ref="l10n_credit_card_coupon.credit_card_coupon_tree"/>
        <field name="arch" type="xml">
            <field name="payment_id" position="after">
                <field name="credit_card_coupon_reconcile_id"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="credit_card_coupon_search">
        <field name="name">credit_card_coupon_search</field>
        <field name="model">credit.card.coupon</field>
        <field name="inherit_id" ref="l10n_credit_card_coupon.credit_card_coupon_search"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="credit_card_coupon_reconcile_id"/>
            </field>
        </field>
    </record>

    <record id="to_settle_credit_card_coupon_action" model="ir.actions.act_window">
        <field name="name">Cupones a liquidar</field>
        <field name="res_model">credit.card.coupon</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('credit_card_coupon_reconcile_id','=',False)]</field>
    </record>

    <menuitem
        id="to_settle_credit_card_coupon_menu"
        name="Cupones a liquidar"
        action="to_settle_credit_card_coupon_action"
        parent="l10n_credit_cards.credit_card_main_menu"
        sequence="155"/>

</odoo>

