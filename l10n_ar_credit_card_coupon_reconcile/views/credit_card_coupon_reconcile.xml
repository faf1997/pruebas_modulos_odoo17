<odoo>

    <record id="credit_card_coupon_reconcile_form" model="ir.ui.view">
        <field name="name">credit_card_coupon_reconcile_form</field>
        <field name="model">credit.card.coupon.reconcile</field>
        <field name="arch" type="xml">
            <form string="Liquidación" create="false">
                <header>
                    <field name="document_to_create" invisible="1"/>
                    <button type="object" class="oe_highlight" groups="l10n_treasury.group_account_treasury_manager" name="action_create_documents" string="Crear documentos"
                            attrs="{'invisible': ['|', ('state', '=', 'done'), ('document_to_create', '=', False)]}"/>
                    <button type="object" groups="l10n_treasury.group_account_treasury_manager" name="action_unlink_documents" string="Eliminar documentos" confirm="Se eliminarán todos los documentos que se generaron de la liquidación. ¿Desea continuar?" attrs="{'invisible': [('state', '!=', 'to_confirm')]}"/>
                    <field name="state" widget="statusbar" nolabel="1" statusbar_visible="draft,to_confirm,done"/>
                    <button type="object" class="oe_highlight" groups="l10n_treasury.group_account_treasury_manager" name="action_confirm" string="Validar liquidación" confirm="Se validarán todos los documentos que se generaron de la liquidación. ¿Desea continuar?" attrs="{'invisible': ['|', ('state', '!=', 'to_confirm'), ('document_to_create', '=', True)]}"/>
                    <button type="object" groups="l10n_treasury.group_account_treasury_manager" name="action_cancel" string="Cancelar" confirm="Los documentos generados ya no estarán vinculados a la liquidación. ¿Desea continuar?" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                </header>
                <sheet>
                    <div class="oe_title" name="reconcile_name">
                        <h1>
                            <field name="name" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="journal_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="currency_id" groups="base.group_multi_currency" attrs="{'invisible': [('currency_id', '=', False)]}"/>
                            <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="acreditation_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="origin" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group string="Montos de liquidación" name="reconcile_amounts">
                        <field name="coupons_total"/>
                        <field name="credited_total" readonly="1"/>
                    </group>
                    <notebook name="reconcile_notebook">
                        <page string="Cupones" name="coupons">
                            <field name="credit_card_coupon_ids" nolabel="1" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="credit_card_id"/>
                                    <field name="date"/>
                                    <field name="presentation_date"/>
                                    <field name="payment_id"/>
                                    <field name="payment_plan_id"/>
                                    <field name="state"/>
                                    <field name="amount"/>
                                    <field name="amount_reconcile_currency" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Datos de documentos" name="documents_data">
                            <group name="supplier_documents">
                                <group name="in_invoice" string="Factura de proveedor">
                                    <field name="purchase_journal_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="discount_product_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                </group>
                                <group name="supplier_payment" string="Pago de proveedor">
                                    <field name="supplier_journal_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                </group>
                            </group>
                            <group name="customer_documents">
                                <group name="out_receipt" string="Recibo de venta">
                                    <field name="sale_journal_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="coupons_account_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                </group>
                                <group name="customer_payment" string="Pago de cliente">
                                    <field name="customer_multiple_journal_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="receivable_journal_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                </group>
                            </group>
                        </page>
                        <page name="fiscal_data" string="Datos fiscales">
                            <group string="Gastos bancarios">
                                <field name="tax_line_ids" nolabel="1" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="company_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="credit_card_coupon_reconcile_id" invisible="1"/>
                                        <field name="tax_id"/>
                                        <field name="amount"/>
                                        <field name="is_exempt" invisible="1"/>
                                        <field name="base" attrs="{'required': [('is_exempt', '=', False)]}"/>
                                    </tree>
                                </field>
                            </group>
                            <group string="Percepciones">
                                <field name="perception_line_ids" nolabel="1" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="company_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="credit_card_coupon_reconcile_id" invisible="1"/>
                                        <field name="perception_id"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </group>
                            <group string="Retenciones">
                                <field name="retention_line_ids" nolabel="1" attrs="{'readonly': [('state', '!=', 'draft')]}" context="{'default_company_id': company_id}">
                                    <tree editable="bottom">
                                        <field name="company_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="credit_card_coupon_reconcile_id" invisible="1"/>
                                        <field name="journal_id"/>
                                        <field name="retention_id"/>
                                        <field name="amount"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Documentos" name="documents">
                            <group name="documents">
                                <field name="in_invoice_id"/>
                                <field name="supplier_payment_id"/>
                                <field name="out_receipt_id"/>
                                <field name="customer_payment_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="credit_card_coupon_reconcile_search" model="ir.ui.view">
        <field name="name">credit_card_coupon_reconcile_search</field>
        <field name="model">credit.card.coupon.reconcile</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="acreditation_date"/>
            </search>
        </field>
    </record>


    <record id="credit_card_coupon_reconcile_tree" model="ir.ui.view">
        <field name="name">credit_card_coupon_reconcile_tree</field>
        <field name="model">credit.card.coupon.reconcile</field>
        <field name="arch" type="xml">
            <tree string="Liquidaciones" create="false" decoration-info="state=='draft'" decoration-success="state=='done'" default_order="acreditation_date desc">
                <field name="name"/>
                <field name="journal_id"/>
                <field name="acreditation_date"/>
                <field name="coupons_total" sum="Total cupones"/>
                <field name="credited_total" sum="Total "/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_credit_card_coupon_reconcile" model="ir.actions.act_window">
        <field name="name">Liquidaciones</field>
        <field name="res_model">credit.card.coupon.reconcile</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        name="Liquidaciones"
        id="menu_credit_card_coupon_reconcile"
        parent="l10n_credit_cards.credit_card_main_menu"
        action="action_credit_card_coupon_reconcile"
        sequence="160"/>

</odoo>

