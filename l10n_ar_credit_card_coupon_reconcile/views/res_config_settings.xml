<odoo>        

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.treasury</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div name="treasury_settings" class="app_settings_block" data-string="Tesorería" string="Tesorería" data-key="l10n_credit_card_coupon_reconcile" groups="l10n_treasury.group_account_treasury_manager">
                        <h2>Liquidación de tarjetas</h2>
                        <div class="row mt16 o_settings_container" id="treasury_settings">
                            <div class="col-12 col-lg-6 o_setting_box" id="credit_card_coupon_reconcile_settings">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Valores por defecto</span>
                                    <span class="fa fa-lg fa-building-o" title="Los valores establecidos aquí son específicos de la empresa." aria-label="Los valores establecidos aquí son específicos de la empresa." groups="base.group_multi_company" role="img"/>
                                    <div class="text-muted">
                                                        Valores por defecto al crear liquidaciones de tarjetas
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="credit_card_coupon_reconcile_discount_product_id" class="col-lg-4 o_light_label"/>
                                            <field name="credit_card_coupon_reconcile_discount_product_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                        </div>
                                        <div class="row">   
                                            <label for="credit_card_coupon_reconcile_receivable_journal_id" class="col-lg-4 o_light_label"/>
                                            <field name="credit_card_coupon_reconcile_receivable_journal_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                        </div>
                                        <div class="row">   
                                            <label for="credit_card_coupon_reconcile_supplier_journal_id" class="col-lg-4 o_light_label"/>
                                            <field name="credit_card_coupon_reconcile_supplier_journal_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                        </div>
                                        <div class="row">   
                                            <label for="credit_card_coupon_reconcile_journal_id" class="col-lg-4 o_light_label"/>
                                            <field name="credit_card_coupon_reconcile_journal_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                        </div>
                                        <div class="row">   
                                            <label for="credit_card_coupon_reconcile_coupons_account_id" class="col-lg-4 o_light_label"/>
                                            <field name="credit_card_coupon_reconcile_coupons_account_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_treasury_config" model="ir.actions.act_window">
            <field name="name">Ajustes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'l10n_credit_card_coupon_reconcile'}</field>
        </record>

        <menuitem 
            id="menu_treasury_config" 
            name="Ajustes" 
            parent="l10n_ar_check_location.treasury_configuration_main_menu"
            sequence="0" 
            action="action_treasury_config" 
            groups="l10n_treasury.group_account_treasury_manager"
        />

</odoo>

