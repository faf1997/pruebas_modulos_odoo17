<odoo>

    <record id="credit_card_coupon_reconcile_wizard_form" model="ir.ui.view">
        <field name="name">credit_card_coupon_reconcile_wizard_form</field>
        <field name="model">credit.card.coupon.reconcile.wizard</field>
        <field name="arch" type="xml">
            <form string="Crear liquidación">
                <group string="Información de liquidación">
                    <group>
                        <field name="credit_card_coupon_reconcile_name" placeholder="XXXX-XXXXXXXX"/>
                        <field name="partner_id"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="acreditation_date"/>
                        <field name="journal_id"/>
                        <field name="origin"/>
                        <field name="amount"/>
                    </group>
                </group>
                <footer>
                    <button name="create_reconcile" string="Crear Liquidación" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancelar" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window 
        id="action_credit_card_coupon_reconcile_wizard" 
        name="Crear liquidación" 
        res_model="credit.card.coupon.reconcile.wizard" 
        binding_model="credit.card.coupon" 
        binding_views="list,form" 
        view_mode="form" 
        view_id="credit_card_coupon_reconcile_wizard_form" 
        target="new"/>

</odoo>

