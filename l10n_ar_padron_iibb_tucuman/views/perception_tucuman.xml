<odoo>

    <data>

        <!-- FORM VIEW -->
        <record model="ir.ui.view" id="perception_tucuman_form">
            <field name="name">perception.tucuman.form</field>
            <field name="model">perception.tucuman</field>
            <field name="arch" type="xml">
                <form string="Presentación Percepción Tucumán">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="file" filename="filename"/>
                            <field name="filename" invisible="True"/>
                            <field name="file_retper" filename="filename_retper"/>
                            <field name="filename_retper" invisible="True"/>
                            <button name="generate_files"
                                    type="object"
                                    string="Generar"
                                    icon="fa-gear"
                                    colspan="1"
                            />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE VIEW -->
        <record model="ir.ui.view" id="perception_tucuman_tree">
            <field name="name">perception.tucuman.tree</field>
            <field name="model">perception.tucuman</field>
            <field name="arch" type="xml">
                <tree string="Presentación Percepción Tucumán">
                    <field name="name"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="file" filename="filename"/>
                    <field name="filename" invisible="True"/>
                </tree>
            </field>
        </record>

        <!-- ACTION -->
        <record model="ir.actions.act_window" id="perception_tucuman_action">
            <field name="name">Presentación Percepción Tucumán</field>
            <field name="res_model">perception.tucuman</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MENU -->
        <menuitem id="perception_tucuman_menu_view"
                  name="Presentación Percepción Tucumán"
                  parent="l10n_ar.reports_ar_main_menu"
                  action="perception_tucuman_action"
                  sequence="130"/>

    </data>

</odoo>

