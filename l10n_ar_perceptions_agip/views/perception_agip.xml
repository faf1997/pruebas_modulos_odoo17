<odoo>

    <data>

        <!-- FORM VIEW -->
        <record model="ir.ui.view" id="perception_agip_form">
            <field name="name">perception.agip.form</field>
            <field name="model">perception.agip</field>
            <field name="arch" type="xml">
                <form string="Percepciones/retenciones AGIP">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="version"/>
                            <field name="regime_code"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="file" filename="filename"/>
                            <field name="file_refunds" filename="filename_refunds"/>
                            <field name="filename" invisible="True"/>
                            <field name="filename_refunds" invisible="True"/>
                            <button name="generate_file"
                                    type="object"
                                    string="Generar"
                                    icon="fa-gear"
                                    colspan="1"
                            />
                        </group>
                        <div>
                            <font color="#CC3300">
                                <b>ATENCION: Los partners que no contengan situacion de IIBB definida lanzarán
                                    un error de carga, evitando la generacion de la presentación.
                                </b>
                            </font>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE VIEW -->
        <record model="ir.ui.view" id="perception_agip_tree">
            <field name="name">perception.agip.tree</field>
            <field name="model">perception.agip</field>
            <field name="arch" type="xml">
                <tree string="Percepciones/retenciones AGIP">
                    <field name="name"/>
                    <field name="version"/>
                    <field name="regime_code"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="file" filename="filename"/>
                    <field name="file_refunds" filename="filename_refunds"/>
                    <field name="filename" invisible="True"/>
                    <field name="filename_refunds" invisible="True"/>
                </tree>
            </field>
        </record>

        <!-- ACTION -->
        <record model="ir.actions.act_window" id="perception_agip_action">
            <field name="name">Percepciones/retenciones AGIP</field>
            <field name="res_model">perception.agip</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- MENU -->
        <menuitem id="perception_agip_menu_group"
                  name="Percepciones/retenciones AGIP"
                  parent="l10n_ar.reports_ar_main_menu"
                  action="perception_agip_action"
                  sequence="91"/>
    </data>

</odoo>

