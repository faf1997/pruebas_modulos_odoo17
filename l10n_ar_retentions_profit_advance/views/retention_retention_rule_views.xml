<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_ar_retentions_profit_advance_from_view_extened" model="ir.ui.view">
        <field name="name">l10n.ar.retentions.profit.advance.from.view.extened</field>
        <field name="model">retention.retention</field>
        <field name="priority">1000</field>
        <field name="inherit_id" ref="l10n_ar_retentions_advance.retention_advance_form"/>
        <field name="arch" type="xml">
            <!--xpath expr="//field[@name='retention_rule_ids']//tree/field[@name='activity_id']" position="after">
                <field name="use_scale"/>
           </xpath-->
           <xpath expr="//field[@name='retention_rule_ids']//tree/field[@name='activity_id']" position="after">
                <field name="scale_id"/>
           </xpath>
           <xpath expr="//field[@name='retention_rule_ids']//tree/field[@name='minimum_tax']" position="after">
              <field name="not_registered_percentage"/>
           </xpath>
        </field>
    </record>

    <record id="retention_retention_rule_form_view" model="ir.ui.view">
        <field name="name">retention.retention.rule.form.view</field>
        <field name="model">retention.retention.rule</field>
        <field name="arch" type="xml">
            <form>
				<shhet>
					<group name="filter">
						<group name="activity_id">
							<field name="retention_id" />
							<field name="activity_id" />
							<field name="not_applicable_minimum"/>
							<field name="minimum_tax"/>
							<field name="percentage"/>
							<field name="not_registered_percentage"/>
							<field name="scale_id"/>
							<field name="exclude_minimum"/>
						</group>
					</group>
				</shhet>
            </form>
        </field>
    </record>

    <record id="retention_retention_rule_tree_view" model="ir.ui.view">
        <field name="name">retention.retention.rule.tree.view</field>
        <field name="model">retention.retention.rule</field>
        <field name="arch" type="xml">
            <tree>
				<field name="retention_id" />
				<field name="activity_id" />
				<field name="not_applicable_minimum"/>
<!--				<field name="minimum_tax"/>
				<field name="percentage"/>
				<field name="not_registered_percentage"/> -->
				<field name="scale_id"/>
				<field name="exclude_minimum"/>
            </tree>
        </field>
    </record>

	<record id="action_rule_ret_prof_view" model="ir.actions.act_window">
		<field name="name">Reglas Retencion Ganancias</field>
		<field name="res_model">retention.retention.rule</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[('activity_id','!=', False)]</field>
	</record>

	<menuitem
		id="wsaa_configuration_menu"
		name="Reglas Retencion Ganancias"
		action="action_rule_ret_prof_view"
		parent="l10n_ar_taxes.taxes_main_menu"
	/>



</odoo>

