<odoo>

    <data>

        <record model="ir.ui.view" id="res_partner_wsafip_form">
            <field name="name">res.partner.wsafip.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="vat" position="after">
                    <field name="get_wsafip_partner_data"/>
                    <field name="partner_data_error" invisible="1"/>
                    <div class="alert alert-warning" role="alert" colspan="2"
                         attrs="{'invisible': [('partner_data_error', '=', False)]}">
                        <strong><span>Â¡ATENCION!:</span></strong>
                        <p>
                            No se pudieron descargar los datos de AFIP para el documento establecido.
                        </p>
                    </div>
                </field>
            </field>
        </record>

        <act_window id="partner_data_get_wizard_menu_plus"
            name="Obtener datos de AFIP"
            res_model="partner.data.get.wizard"
            binding_model="res.partner"
            binding_views="form"
            view_mode="form"
            target="new"
            context="{'default_partner_id': active_id}"
        />

    </data>

</odoo>

