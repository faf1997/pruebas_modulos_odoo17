<odoo>

    <record model="ir.ui.view" id="credit_card_form">
        <field name="name">credit_card_form</field>
        <field name="model">credit.card</field>
        <field name="inherit_id" ref="l10n_credit_cards.credit_card_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='plan_ids']/tree/field[@name='quantity']" position="after">
                <field name="credit_days" attrs="{'column_invisible': [('parent.type', '=', 'purchase')]}"/>
                <field name="credit_percentage" attrs="{'column_invisible': [('parent.type', '=', 'purchase')]}"/>
            </xpath>
        </field>
    </record>

</odoo>

