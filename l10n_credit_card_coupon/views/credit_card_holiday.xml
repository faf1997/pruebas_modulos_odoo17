<odoo>

    <record model="ir.ui.view" id="credit_card_holiday_form">
        <field name="name">credit_card_holiday_form</field>
        <field name="model">credit.card.holiday</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="date"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="credit_card_holiday_tree">
        <field name="name">credit_card_holiday_tree</field>
        <field name="model">credit.card.holiday</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="credit_card_holiday_action" model="ir.actions.act_window">
        <field name="name">Feriados</field>
        <field name="res_model">credit.card.holiday</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="credit_card_holiday_menu"
        name="Feriados"
        action="credit_card_holiday_action"
        parent="l10n_credit_cards.credit_card_main_menu"
        sequence="170"/>

</odoo>

