<odoo>

    <record id="credit_card_coupon_closure_wizard_form" model="ir.ui.view">
        <field name="name">credit_card_coupon_closure_wizard_form</field>
        <field name="model">credit.card.coupon.closure.wizard</field>
        <field name="arch" type="xml">
            <form string="Cierre de cupones">
                <group>
                    <field name="closure_date"/>
                </group>
                <footer>
                    <button name="close_coupons" string="Cerrar cupones" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancelar" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window 
        id="action_credit_card_coupon_closure_wizard" 
        name="Cerrar cupones" 
        res_model="credit.card.coupon.closure.wizard" 
        binding_model="credit.card.coupon" 
        binding_views="list,form" 
        view_mode="form" 
        view_id="credit_card_coupon_closure_wizard_form" 
        target="new"/>

</odoo>

