<odoo>

    <record model="ir.ui.view" id="credit_card_installment_form">
        <field name="name">Credit card installment form</field>
        <field name="model">credit.card.installment</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <sheet>
                    <h3><field name="name"/></h3>
                    <group>
                        <group>
                            <field name="credit_card_id"/>
                            <field name="payment_id"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="installments_text"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="partner_id"/>
                            <field name="due_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="credit_card_installment_tree">
        <field name="name">Credit card installment tree</field>
        <field name="model">credit.card.installment</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" delete="false">
                <field name="currency_id" invisible="1"/>
                <field name="credit_card_id"/>
                <field name="name"/>
                <field name="due_date"/>
                <field name="installments_text"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="credit_card_installment_action" model="ir.actions.act_window">
        <field name="name">Cuotas</field>
        <field name="res_model">credit.card.installment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="credit_card_installment_menu"
        name="Cuotas"
        action="credit_card_installment_action"
        parent="l10n_credit_cards.credit_card_main_menu"
    />

</odoo>

