<odoo>

    <data>

        <record model="ir.ui.view" id="account_payment_term_automatic_debit_form_view">
            <field name="name">account_payment_term_automatic_debit_form_view</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="is_automatic_debit"/>
                    <field name="card_type" attrs="{'invisible': [('is_automatic_debit', '=', False)]}"/>
                </field>
            </field>
        </record>

    </data>

</odoo>

