<odoo>

    <data>

        <record id="generate_automatic_debit_files_wizard_form_view" model="ir.ui.view">
            <field name="name">generate_automatic_debit_files_wizard_form_view</field>
            <field name="model">generate.automatic.debit.files.wizard</field>
            <field name="arch" type="xml">
                <form string="Generar archivos de débitos automáticos">
                    <group>
                        <group>
                            <field name="date_from"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <group>
                        <field name="payment_term_id" widget="selection"/>
                    </group>
                    <footer>
                        <button name="generate_files"
                                string="Generar archivos"
                                class="oe_highlight"
                                type="object"
                        />
                        <button class="oe_link"
                                string='Cancel'
                                special='cancel'
                        />
                    </footer>
                </form>
            </field>
        </record>

        <record id="generate_automatic_debit_files_wizard_action" model="ir.actions.act_window">
            <field name="name">Generar archivos de débitos automáticos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">generate.automatic.debit.files.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            id="generate_automatic_debit_files_wizard_menu"
            name="Generar archivos de débitos automáticos"
            action="generate_automatic_debit_files_wizard_action"
            parent="prisma_automatic_debit_file.account_reports_prisma_menu"
            sequence="110"
            groups="account.group_account_manager"
        />

    </data>

</odoo>

