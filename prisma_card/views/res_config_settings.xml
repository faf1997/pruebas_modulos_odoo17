<odoo>

   <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_account_invoice_extract']//..//..//.." position="after">
                <h2>Tarjetas Prisma</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="prisma_visa"/>
                            <div class="mt16">
                                <field name="prisma_visa"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="prisma_mastercard"/>
                            <div class="mt16">
                                <field name="prisma_mastercard"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>

