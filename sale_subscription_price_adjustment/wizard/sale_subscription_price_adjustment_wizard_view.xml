<odoo>
    <data>

        <record model="ir.ui.view" id="sale_subscription_price_adjustment_form">
            <field name="name">Sale subscription price adjustment form</field>
            <field name="model">sale.subscription.price.adjustment.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="date_adjustment"/>
                        <field name="adjustment_percentage"/>
                        <field name="end_date_adjustment"/>
                    </group>
                    <footer>
                        <button string="Actualizar precios" type="object" name="adjust_price" class="oe_highlight"/>
                        o
                        <button class="oe_link" special="cancel" string="Salir"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="sale_subscription_price_adjustment_view" model="ir.actions.act_window">
            <field name="name">Ajustar precios</field>
            <field name="res_model">sale.subscription</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <act_window
            id="action_multi_analytic_price_adjustment_view"
            name="Ajustar precios"
            res_model="sale.subscription.price.adjustment.wizard"
            binding_model="sale.subscription"
            binding_views="form,list"
            view_mode="form"
            target="new"
        />

    </data>
</odoo>

